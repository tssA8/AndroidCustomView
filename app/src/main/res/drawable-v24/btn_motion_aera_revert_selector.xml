<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disable 時的圖片 -->
    <item android:state_enabled="false" android:drawable="@mipmap/btn_installer_down"/>
    <!-- 沒有焦點時的背景圖片 -->
    <item android:drawable="@mipmap/btn_installer_normal" android:state_window_focused="false"/>
    <!-- 非觸摸模式下獲得焦點並單擊時的背景圖片 -->
    <item android:drawable="@mipmap/btn_installer_down" android:state_focused="true" android:state_pressed="true"/>
    <!-- 觸摸模式下單擊時的背景圖片 -->
    <item android:drawable="@mipmap/btn_installer_down" android:state_focused="false" android:state_pressed="true"/>
    <!-- 選中時的圖片背景 -->
    <item android:drawable="@mipmap/btn_installer_down" android:state_selected="true"/>
    <!-- 獲得焦點時的圖片背景 -->
    <item android:drawable="@mipmap/btn_installer_down" android:state_focused="true"/>

    <!-- 默認時的背景圖片 -->
    <item android:drawable="@mipmap/btn_installer_normal"/>
</selector>